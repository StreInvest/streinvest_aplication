<h1>editar consorio</h1>

<%= form_with scope: :post, url: '/consortium/updated'   do |form| %>

  <div class="field form-group mb-3">
    <%= form.text_field :conso_id, class:"form-control", value: @summary_show['response']['_id'], placeholder:"id do invesimento" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :nome, class:"form-control", value: @summary_show['response']['consortium_name'], placeholder:"nome do consorcio" %>
  </div>

  <br />
  
  <div class="actions">
    
  <%= link_to "ir para consorcios", consortium_index_path %>
  
  <%= form.submit 'Confirmar', class:'btn btn-success' %>

  </div>

<% end %>



