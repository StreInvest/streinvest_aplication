<h1>Criar consorcio</h1>

<%= form_with scope: :post, url: '/consortium'   do |form| %>

    <div class="field form-group mb-3">
      <%= form.text_field :nome, class:"form-control", placeholder:"nome do consorcio" %>
    </div>

    <br />
    
    <div class="actions">
      
    <%= link_to "ir para consorcios", consortium_index_path %>
    
    <%= form.submit 'Confirmar', class:'btn btn-success' %>
  
    </div>
  
<% end %>
